<!DOCTYPE html>
<html>
  <head>
    <title>Movie2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <link rel="stylesheet" type="text/css" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

</head>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">

            <%= link_to "Home", root_path, class:"nav-link" %><span class="sr-only">(current)</span>
          </li>

          <li class="nav-item">
            <%= link_to "TV Shows", tvshows_index_path, class:"nav-link" %><span class="sr-only">(current)</span>
          </li>

          <li class="nav-item">
            <%= link_to "Movies", movies_index_path, class:"nav-link" %><span class="sr-only">(current)</span>
          </li>

        </ul>

        <%= form_tag("/welcome/show", method: :get, class: "form-inline my-2 my-lg-0") do %>
            <%= text_field_tag(:search, @search, {placeholder: "Search", required: 'required'}) %>
            <% submit_tag("Search") %>
        <% end %>


      </div>
    </nav>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <%= yield %>


  </body>
</html>
