<!DOCTYPE html>
<html>
  <head>
    <title>Movie2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#"><%= link_to "Home", root_path %><span class="sr-only">(current)</span></a>
          </li>

        </ul>

        <%= form_tag("/welcome/show", method: :get, class: "form-inline my-2 my-lg-0") do %>
            <%= text_field_tag(:search, @search, {placeholder: "Search", required: 'required'}) %>
            <% submit_tag("Search") %>
        <% end %>


      </div>
    </nav>




    <%= yield %>
  </body>
</html>
