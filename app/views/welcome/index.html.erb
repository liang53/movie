<!-- landing page photo carousel for currently trending movies/shows -->

<div id="carouselExampleControls" class="carousel slide container-fluid" data-ride="carousel">

  <!-- Image Wrapper -->
  <div class="carousel-inner">
    <% @trending.each_with_index do |show, n| %>
      <% poster_path = show['poster_path'] %>
      <% title = show["original_title"] %>
      <% if n == 0 %>
        <div class="carousel-item active gallery">
          <img class="d-block w-100 gallery-image" src="<%= "https://image.tmdb.org/t/p/original/#{poster_path}" %>" alt="<%= "#{n+1}" %> slide">
          <div class="carousel-caption">
            <h1><%= title %></h1>
          </div>
        </div>

      <% else %>
        <div class="carousel-item gallery">
          <img class="d-block w-100 gallery-image" src="<%= "https://image.tmdb.org/t/p/original/#{poster_path}" %>" alt="<%= "#{n+1}" %> slide">
          <div class="carousel-caption">
            <h1><%= title %></h1>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>


  <!-- Controls -->
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<!-- end of carousel images -->



<div class="container-fluid">
  <h4 class = "page-title"><br>Top Picks </h4>

  <!-- display the tv shows  -->
  <div class = "jumbotron">
    <%= render partial: "tvshows/discover", locals: { tvshows: @tvshows } %>
  </div>

  <!-- display movies -->
  <div class = "jumbotron">
    <%= render partial: "movies/discover", locals: { movies: @movies } %>
  </div>


</div>
