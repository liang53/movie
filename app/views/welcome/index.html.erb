<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @trending.each_with_index do |show,n| %>
      <% if n == 0 %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= "#{n}" %>" class="active"></li>
      <% else %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= "#{n}" %>"></li>
      <% end %>
    <% end %>
  </ol>

  <div class="carousel-inner">

    <% @trending.each_with_index do |show, n| %>
      <% poster_path = show['poster_path'] %>
      <% if n == 0 %>
        <div class="carousel-item active gallery">
          <img class="d-block w-100 gallery-image" src="<%= "https://image.tmdb.org/t/p/w500/#{poster_path}" %>" alt="<%= "#{n+1}" %> slide">
        </div>
      <% else %>
        <div class="carousel-item gallery">
          <img class="d-block w-100 gallery-image" src="<%= "https://image.tmdb.org/t/p/w500/#{poster_path}" %>" alt="<%= "#{n+1}" %> slide">
        </div>
      <% end %>

      <div class="carousel-caption d-none d-md-block">
        <p class="caption "><%= show["title"] %></p>
      </div>
    <% end %>

  </div>




  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<script type="text/javascript">
  $(document).on('turbolinks:load', function(){
     $('.carousel').carousel('cycle')({
        interval: 2000
     });
  });
</script>


<div class="container-fluid">
  <h4 class = "page-title">Top Picks </h4>

  <div class = "jumbotron">
    <%= render partial: "tvshows/discover", locals: { tvshows: @tvshows } %>
  </div>


  <div class = "jumbotron">
    <%= render partial: "movies/discover", locals: { movies: @movies } %>
  </div>


</div>
